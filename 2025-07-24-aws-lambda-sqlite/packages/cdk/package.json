{
	"name": "@aws-lambda-sqlite/cdk",
	"version": "1.0.0",
	"description": "AWS CDK infrastructure for Lambda SQLite EFS project",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"clean": "rm -rf dist tsconfig.tsbuildinfo cdk.out",
		"clean:build": "rm -rf dist tsconfig.tsbuildinfo",
		"test": "vitest run --pool=forks",
		"test:dev": "vitest run --pool=forks",
		"cdk": "cdk",
		"synth": "cdk synth",
		"deploy": "cdk deploy",
		"deploy:force": "cdk deploy --require-approval never",
		"destroy": "cdk destroy",
		"destroy:force": "cdk destroy --force",
		"lint": "biome check --no-errors-on-unmatched",
		"lint:fix": "biome check --write --no-errors-on-unmatched",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/node": "^22.10.5",
		"@vitest/coverage-v8": "^2.1.8",
		"aws-cdk": "^2.177.0",
		"aws-cdk-lib": "^2.177.0",
		"constructs": "^10.4.1",
		"source-map-support": "^0.5.21",
		"tsx": "4.20.3",
		"typescript": "^5.7.3",
		"vitest": "^2.1.8"
	}
}
