{
	"name": "api",
	"exports": {
		"./sqlite.js": {
			"types": "./dist/sqlite.d.ts",
			"default": "./dist/sqlite.js"
		},
		"./sqlite-schema.js": {
			"types": "./dist/sqlite-schema.d.ts",
			"default": "./dist/sqlite-schema.js"
		}
	},
	"version": "1.0.0",
	"description": "Lambda API with Hono",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc --build",
		"build:lambda": "../../scripts/build-lambda.sh",
		"dev": "tsx src/index.ts",
		"clean": "rm -rf dist lambda.zip tsconfig.tsbuildinfo",
		"clean:build": "rm -rf dist tsconfig.tsbuildinfo",
		"lint": "biome check .",
		"lint:fix": "biome check --fix .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:dev": "vitest run --maxWorkers=1",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@aws-sdk/client-dynamodb": "3.848.0",
		"@aws-sdk/lib-dynamodb": "3.848.0",
		"@libsql/client": "^0.15.10",
		"commander": "14.0.0",
		"drizzle-orm": "0.44.3",
		"hono": "4.8.5",
		"ulid": "2.3.0"
	},
	"devDependencies": {
		"@types/node": "24.1.0",
		"tsx": "4.20.3",
		"typescript": "5.8.3",
		"vitest": "3.2.4"
	}
}
