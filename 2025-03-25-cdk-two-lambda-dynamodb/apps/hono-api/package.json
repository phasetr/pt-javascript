{
  "name": "hono-api",
  "scripts": {
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 --format=cjs ./src/index.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name hello",
    "deploy": "run-s build zip update",
    "dev": "tsx watch src/index.dev.ts"
  },
  "devDependencies": {
    "@types/node": "^22.13.13",
    "esbuild": "^0.21.4",
    "npm-run-all2": "^6.2.0",
    "tsx": "^4.19.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "hono": "^4.7.5"
  }
}
