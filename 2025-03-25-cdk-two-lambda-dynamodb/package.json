{
  "name": "cdk-two-lambda-dynamodb",
  "version": "0.1.0",
  "bin": {
    "cdk-two-lambda-dynamodb": "bin/cdk-two-lambda-dynamodb.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "dynamodb:start": "docker compose up -d",
    "dynamodb:stop": "docker compose down",
    "dynamodb:init": "node scripts/init-dynamodb.js",
    "build:hono": "node scripts/build-hono.js",
    "build:remix": "node scripts/build-remix.js",
    "build:all": "npm run build && npm run build:hono",
    "deploy": "npm run build:all && cdk deploy",
    "destroy": "cdk destroy"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.774.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1005.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.181.1",
    "constructs": "^10.0.0"
  }
}
