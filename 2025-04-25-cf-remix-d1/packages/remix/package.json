{
	"name": "remix",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"cf-typegen": "wrangler types",
		"deploy": "pnpm run build && wrangler deploy",
		"dev": "react-router dev",
		"preview": "pnpm run build && vite preview",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "ENV=local tsx ./scripts/migrate.ts",
		"db:migrate:prod": "ENV=prod tsx ./scripts/migrate.ts",
		"db:seed:local": "ENV=local tsx ./scripts/seed.ts",
		"db:seed:prod": "ENV=prod tsx ./scripts/seed.ts",
		"db:reset:local": "pnpm db:migrate:local && pnpm db:seed:local",
		"db:reset:prod": "pnpm db:migrate:prod && pnpm db:seed:prod"
	},
	"dependencies": {
		"@cloudflare/d1": "^1.4.1",
		"drizzle-orm": "^0.43.0",
		"isbot": "^5.1.17",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-router": "^7.5.0"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.0.0",
		"@cloudflare/workers-types": "^4.20250424.0",
		"@react-router/dev": "^7.5.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^20",
		"@types/react": "^19.0.1",
		"@types/react-dom": "^19.0.1",
		"drizzle-kit": "^0.31.0",
		"tailwindcss": "^4.0.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.7.1",
		"typescript": "^5.7.2",
		"vite": "^6.2.1",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.13.1"
	}
}
