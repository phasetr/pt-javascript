{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "dist",
    "paths": {
      "aws-utils": ["../aws-utils/src/index.ts"],
      "aws-utils/*": ["../aws-utils/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
